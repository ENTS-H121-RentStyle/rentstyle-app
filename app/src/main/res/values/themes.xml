<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RentStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.RentStyle" parent="Base.Theme.RentStyle" />

    <style name="TextView.Heading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.TabText" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditText.Background" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@color/white</item>
    </style>
</resources>