<resources
    xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RentStyle" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/orange_1</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor">?android:windowLightStatusBar</item>
    </style>

    <style name="Theme.RentStyle" parent="Base.Theme.RentStyle" />

    <style name="TextView.Button" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange_1</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchBar.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/orange_1</item>
        <item name="cardBackgroundColor">@color/searchbar_light</item>
    </style>

    <style name="TextView.Heading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.Paragraph" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.TabText" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditText.Background" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@color/white</item>
    </style>
</resources>