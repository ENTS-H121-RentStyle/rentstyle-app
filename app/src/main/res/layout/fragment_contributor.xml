<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ContributorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/iv_brand_image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brand"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/main_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/cd_brand_logo" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tb_brand_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/welcome_msg"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/iv_brand_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_heading_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_about_rentstyle"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tb_brand_slogan"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_heading_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_machine_learning_teams"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_heading_1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_faisal"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_heading_2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_yafi"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_member_1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_sueb"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_member_2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_heading_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_cloud_computing_teams"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_member_3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_wildan"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_heading_3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_yoga"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_member_4"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_heading_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_mobile_development_teams"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_member_5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_akmal"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_heading_4"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextView.Paragraph"
            android:id="@+id/tv_member_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/txt_richard"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_member_6"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>