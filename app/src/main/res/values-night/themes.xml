<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RentStyle" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/orange_1</item>
        <item name="colorSecondary">@color/orange_2</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextView.Button" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange_2</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchBar.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/searchbar_dark</item>
    </style>

    <style name="Text.DayNight.Orange" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange_2</item>
    </style>

    <style name="DayNight.CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/orange_2</item>
    </style>

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#121212</item>
        <item name="postSplashScreenTheme">@style/Theme.RentStyle</item>
    </style>
</resources>